# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
# Publishable Key starts with pk_test_ or pk_live_
# Secret Key starts with sk_test_ or sk_live_
# Set STRIPE_SECRET_KEY in Vercel environment variables
STRIPE_SECRET_KEY=

# Firebase Configuration
# Urban Garage Sale Firebase project settings
FIREBASE_PROJECT_ID=urbangaragesale

# Firebase Service Account
# Path to Firebase Admin SDK private key (set in Vercel env)
GOOGLE_APPLICATION_CREDENTIALS=./PrivateKey/urbangaragesale-firebase-adminsdk-fbsvc-d4c97a0c2f.json

# SendGrid Configuration
# Get API key from SendGrid dashboard: https://app.sendgrid.com/settings/api_keys
# Set SENDGRID_API_KEY in Vercel environment variables
SENDGRID_API_KEY=
# Server Configuration
PORT=3000
NODE_ENV=development
