rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin - more robust version
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', '') == 'admin';
    }

    // Promotional messages collection (anyone can read, only admins can write)
    match /promotions/{document=**} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && isAdmin();
    }

    // App settings - any authenticated user can read, only admins can write
    match /appSettings/{document=**} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && isAdmin();
    }

    // Admin settings (deprecated but kept for compatibility)
    match /admin_settings/{document=**} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && isAdmin();
    }

    // Garage sales listings (public read, authenticated create, own/admin update)
    match /garageSales/{document=**} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.user_id || isAdmin()
      );
      allow delete: if request.auth != null && (
        request.auth.uid == resource.data.user_id || isAdmin()
      );
    }

    // Saved listings (user-specific, with creation verification)
    match /savedListings/{document=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.user_id;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.user_id;
    }

    // Payment records (user can read own, admin can read all, admins can update)
    match /payments/{document=**} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.user_id || isAdmin()
      );
      allow create: if request.auth != null;
      allow update: if request.auth != null && isAdmin();
      allow delete: if request.auth != null && isAdmin();
    }

    // Contact messages (anyone can create, only admins can read/update/delete)
    match /contactMessages/{document=**} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && isAdmin();
    }

    // User profiles
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && isAdmin();
    }

    // Postcode cache (public read, server-only write via Admin SDK)
    match /postcode_cache/{document=**} {
      allow read: if true;
      allow write: if false; // Only written by server via Admin SDK
    }

    // Urban Pay Sales Transactions
    match /sales/{saleId} {
      // Seller can create sales (from their payments)
      allow create: if request.auth != null && 
                     request.auth.uid == request.resource.data.sellerId;
      
      // Seller can read their own sales
      allow read: if request.auth != null && 
                  request.auth.uid == resource.data.sellerId;
      
      // Admins can read all sales
      allow read: if request.auth != null && isAdmin();
      
      // Seller can update their own sales
      allow update: if request.auth != null && 
                   request.auth.uid == resource.data.sellerId;
      
      // Only admins can delete
      allow delete: if request.auth != null && isAdmin();
    }

    // Urban Pay Seller Statistics
    match /sellerStats/{sellerId} {
      // User can read and write their own stats
      allow read: if request.auth != null && request.auth.uid == sellerId;
      allow write: if request.auth != null && request.auth.uid == sellerId;
      
      // Admins can read all stats
      allow read: if request.auth != null && isAdmin();
      
      // Admins can update stats
      allow update: if request.auth != null && isAdmin();
      
      // Only admins can delete
      allow delete: if request.auth != null && isAdmin();
    }
  }
}
